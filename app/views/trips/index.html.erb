<h1>Listing trips</h1>

<table>
  <thead>
    <tr>
      <th>Boat name</th>
      <th>Trip organizer</th>
      <th>Trip description</th>
      <th>Trip attendees</th>
      <th>Trip attendee limit</th>
      <th>Race</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.boat_name %></td>
        <td><%= trip.trip_organizer %></td>
        <td><%= trip.trip_description %></td>
        <td><%= trip.trip_attendees %></td>
        <td><%= trip.trip_attendee_limit %></td>
        <td><%= trip.race_id %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

